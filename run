tz_entry.grid(row=3, column=1, sticky="w", padx=5, pady=2)
tz_entry.insert(0, "Asia/Shanghai")

# 第二列
ttk.Label(env_frame, text="自动更新:").grid(row=0, column=2, sticky="w", padx=(20,0))
update_var = tk.StringVar(value="release")
update_combo = ttk.Combobox(
    env_frame, 
    textvariable=update_var, 
    values=["release", "beta", "dev"],
    state="readonly",
    width=12
)
update_combo.grid(row=0, column=3, sticky="w", padx=5)

ttk.Label(env_frame, text="认证站点:").grid(row=1, column=2, sticky="w", padx=(20,0))
