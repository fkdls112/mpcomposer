auth_site_combo = ttk.Combobox(
    env_frame, 
    textvariable=auth_site_var, 
    values=["iyuu", "ptp", "hdb", "custom"],
    state="readonly",
    width=12
)
auth_site_combo.grid(row=1, column=3, sticky="w", padx=5)

ttk.Label(env_frame, text="代理地址:").grid(row=2, column=2, sticky="w", padx=(20,0))
