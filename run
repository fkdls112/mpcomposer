# 管理员账户
admin_frame = ttk.LabelFrame(env_frame, text="管理员账户")
admin_frame.grid(row=4, column=0, columnspan=4, sticky="ew", pady=10, padx=5)

ttk.Label(admin_frame, text="管理员用户名:").grid(row=0, column=0, sticky="w")
